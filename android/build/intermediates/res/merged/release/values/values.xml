<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CameraView">

        <attr format="integer|reference" name="cameraPictureSizeMinWidth"/>
        <attr format="integer|reference" name="cameraPictureSizeMaxWidth"/>
        <attr format="integer|reference" name="cameraPictureSizeMinHeight"/>
        <attr format="integer|reference" name="cameraPictureSizeMaxHeight"/>
        <attr format="integer|reference" name="cameraPictureSizeMinArea"/>
        <attr format="integer|reference" name="cameraPictureSizeMaxArea"/>
        <attr format="boolean" name="cameraPictureSizeSmallest"/>
        <attr format="boolean" name="cameraPictureSizeBiggest"/>
        <attr format="string|reference" name="cameraPictureSizeAspectRatio"/>

        <attr format="integer|reference" name="cameraVideoSizeMinWidth"/>
        <attr format="integer|reference" name="cameraVideoSizeMaxWidth"/>
        <attr format="integer|reference" name="cameraVideoSizeMinHeight"/>
        <attr format="integer|reference" name="cameraVideoSizeMaxHeight"/>
        <attr format="integer|reference" name="cameraVideoSizeMinArea"/>
        <attr format="integer|reference" name="cameraVideoSizeMaxArea"/>
        <attr format="boolean" name="cameraVideoSizeSmallest"/>
        <attr format="boolean" name="cameraVideoSizeBiggest"/>
        <attr format="string|reference" name="cameraVideoSizeAspectRatio"/>

        <attr format="integer|reference" name="cameraVideoBitRate"/>
        <attr format="integer|reference" name="cameraAudioBitRate"/>

        <attr format="integer|reference" name="cameraSnapshotMaxWidth"/>
        <attr format="integer|reference" name="cameraSnapshotMaxHeight"/>

        <attr format="enum" name="cameraGestureTap">
            <enum name="none" value="0"/>
            <enum name="focus" value="1"/>
            <enum name="focusWithMarker" value="2"/>
            <enum name="capture" value="3"/>
        </attr>

        <attr format="enum" name="cameraGestureLongTap">
            <enum name="none" value="0"/>
            <enum name="focus" value="1"/>
            <enum name="focusWithMarker" value="2"/>
            <enum name="capture" value="3"/>
        </attr>

        <attr format="enum" name="cameraGesturePinch">
            <enum name="none" value="0"/>
            <enum name="zoom" value="4"/>
            <enum name="exposureCorrection" value="5"/>
        </attr>

        <attr format="enum" name="cameraGestureScrollHorizontal">
            <enum name="none" value="0"/>
            <enum name="zoom" value="4"/>
            <enum name="exposureCorrection" value="5"/>
        </attr>

        <attr format="enum" name="cameraGestureScrollVertical">
            <enum name="none" value="0"/>
            <enum name="zoom" value="4"/>
            <enum name="exposureCorrection" value="5"/>
        </attr>

        <attr format="enum" name="cameraFacing">
            <enum name="back" value="0"/>
            <enum name="front" value="1"/>
        </attr>

        <attr format="enum" name="cameraHdr">
            <enum name="off" value="0"/>
            <enum name="on" value="1"/>
        </attr>

        <attr format="enum" name="cameraFlash">
            <enum name="off" value="0"/>
            <enum name="on" value="1"/>
            <enum name="auto" value="2"/>
            <enum name="torch" value="3"/>
        </attr>

        <attr format="enum" name="cameraWhiteBalance">
            <enum name="auto" value="0"/>
            <enum name="incandescent" value="1"/>
            <enum name="fluorescent" value="2"/>
            <enum name="daylight" value="3"/>
            <enum name="cloudy" value="4"/>
        </attr>

        <attr format="enum" name="cameraGrid">
            <enum name="off" value="0"/>
            <enum name="draw3x3" value="1"/>
            <enum name="draw4x4" value="2"/>
            <enum name="drawPhi" value="3"/>
        </attr>

        <attr format="color|reference" name="cameraGridColor"/>

        <attr format="enum" name="cameraMode">
            <enum name="picture" value="0"/>
            <enum name="video" value="1"/>
        </attr>

        <attr format="enum" name="cameraAudio">
            <enum name="off" value="0"/>
            <enum name="on" value="1"/>
        </attr>

        <attr format="enum" name="cameraPreview">
            <enum name="surface" value="0"/>
            <enum name="texture" value="1"/>
            <enum name="glSurface" value="2"/>
        </attr>

        <attr format="boolean" name="cameraPlaySounds"/>

        <attr format="float" name="cameraVideoMaxSize"/>

        <attr format="integer" name="cameraVideoMaxDuration"/>

        <attr format="enum" name="cameraVideoCodec">
            <enum name="deviceDefault" value="0"/>
            <enum name="h263" value="1"/>
            <enum name="h264" value="2"/>
        </attr>

        <attr format="boolean" name="cameraExperimental"/>

    </declare-styleable>
</resources>